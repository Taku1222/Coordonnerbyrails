<div class="main posts-new">
  <div class="container">
    <i class="fas fa-question question"></i>
    <h3>投稿</h3>
    <%= form_tag("/post/create",{multipart: true}) do %>
    <div class="form">
      <div class="form-body">
        <p>アイテム名</p>
        <input name="item">
        <p>ブランド</p>
        <input name="brand">
        <p>サイズ</p>
        <input name="size">
        <p>その他詳細</p>
        <textarea name="content"></textarea>
        <input name="image" type="file">
        <input type="submit" value="投稿">
      </div>
    </div>
  <% end %>
  <i class="fas fa-exclamation exclamation"></i>
  </div>
</div>
